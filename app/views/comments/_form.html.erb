<!-- this form partial will be only used in the post/show  view to create a new comment-->
<%= form_for [@post, @post.comments.build], remote: true do |f| %>
   <% if comment.errors.any? %>
     <div class="alert alert-danger">
       <h4>There are <%= pluralize(comment.errors.count, "error") %>.</h4>
       <ul>
         <% comment.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
         <% end %>
       </ul>
     </div>
   <% end %>
   <%= form_group_tag(comment.errors[:body]) do %>
     <%= f.text_area :body, rows: 8, class: 'form-control form-group-sm', placeholder: "Enter comment body" %>
   <% end %>
   <div class="form-group">
     <%= f.submit "Save", class: 'btn btn-success' %>
   </div>
 <% end %>